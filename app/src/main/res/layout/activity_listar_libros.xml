<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".listarLibrosActivity"
    android:orientation="vertical"
    android:background="@color/black"
    >



    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginBottom="5dp"


        app:cardCornerRadius="4dp">

        <TextView
            android:id="@+id/info_text"
            android:background="@color/black"
            android:layout_width="match_parent"
            android:layout_height="26dp"
            android:gravity="center"
            android:textSize="19dp"
            android:text="Fuego"
            android:textColor="@color/white"
            />

        <ImageView
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/libro"
            android:layout_marginBottom="5dp"

            />


    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        >

        <LinearLayout
            android:layout_width="90dp"
            android:layout_height="155dp"
            android:orientation="vertical"
            android:layout_gravity="center"
            >

            <Button
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="5dp"
                android:text="Me gusta"
                android:textSize="12dp"
                android:textAllCaps="false"
                android:padding="1dp"
                />
            <Button
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="5dp"
                android:text="No me gusta"
                android:textSize="12dp"
                android:textAllCaps="false"
                android:padding="1dp"
                />
            <Button
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="5dp"
                android:text="Descarga"
                android:textSize="12dp"
                android:textAllCaps="false"
                android:padding="1dp"
                />
        </LinearLayout>







        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/grey"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="left"
                android:textSize="19dp"
                android:padding="2dp"
                android:text="Autor:"
                android:textColor="@color/white"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="left"
                android:textSize="19dp"
                android:padding="2dp"
                android:text="Genero:"
                android:textColor="@color/white"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="left"
                android:textSize="19dp"
                android:padding="2dp"
                android:text="Fecha de publicaciÃ³n:"
                android:textColor="@color/white"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="left"
                android:textSize="19dp"
                android:padding="2dp"
                android:text="Descripcion:"
                android:textColor="@color/white"/>
        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginTop="2dp"
        android:background="@color/caba"/>

<TextView
    android:layout_width="match_parent"
    android:layout_height="30dp"
    android:text="Tal vez podria gustarte:"
    android:gravity="center"
    android:textStyle="italic"
    android:textColor="@color/white"
    />


    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="90dp"
                android:layout_height="140dp"
                android:src="@drawable/libro2"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                />

            <ImageView
                android:layout_width="90dp"
                android:layout_height="140dp"
                android:src="@drawable/libro3"
                android:layout_marginRight="10dp"
                />
            <ImageView
                android:layout_width="90dp"
                android:layout_height="140dp"
                android:src="@drawable/libro4"
                android:layout_marginRight="10dp"
                />
            <ImageView
                android:layout_width="90dp"
                android:layout_height="140dp"
                android:src="@drawable/libro5"
                android:layout_marginRight="10dp"
                />


        </LinearLayout>

    </HorizontalScrollView>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="@color/caba"/>




</LinearLayout>